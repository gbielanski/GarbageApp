<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="sectorTerm"
            type="pl.example.android.garbageapp.data.database.SectorTerm" />
        <variable
            name="sectorColor"
            type="int"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@{context.getColor(sectorColor)}"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_margin="@dimen/tiny_margin"
        android:elevation="@dimen/tiny_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@{context.getColor(sectorColor)}"
            android:gravity="bottom"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            tools:text="piÄ…tek, 3 listopada 2017"
            android:text="@{sectorTerm.getTermString()}"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@{context.getColor(sectorColor)}"
            android:gravity="top"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
            android:textColor="@android:color/white"
            tools:text="zmieszane"
            android:text="@{sectorTerm.getTermTypeString()}"/>
    </LinearLayout>
</layout>